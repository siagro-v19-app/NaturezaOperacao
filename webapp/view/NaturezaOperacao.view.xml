<mvc:View controllerName="br.com.idxtecNaturezaOperacao.controller.NaturezaOperacao"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:t="sap.ui.table">
	<App id="app">
		<pages>
			<Page>
				<content>
					<t:Table id="tableNatOperacao"
						rows="{
							path: '/NaturezaOperacaos',
								parameters: {
									expand: 'CfopDetails'
								}
							}">
						<t:toolbar>
							<Toolbar>
								<Title text="Natureza de Operação"/>
							</Toolbar>
						</t:toolbar>
						<t:columns>
							<t:Column filterProperty="Codigo" sortProperty="Codigo">
								<Label text="Código"/>
								<t:template>
									<Text text="{Codigo}"/>
								</t:template>
							</t:Column>
							<t:Column filterProperty="Descricao" sortProperty="Descricao">
								<Label text="Descrição"/>
								<t:template>
									<Text text="{Descricao}"/>
								</t:template>
							</t:Column>
							<t:Column filterProperty="CfopDetails/Descricao" sortProperty="CfopDetails/Descricao">
								<Label text="CFOP"/>
								<t:template>
									<Text text="{CfopDetails/Descricao}"/>
								</t:template>
							</t:Column>
							<t:Column filterProperty="GeraDuplicata" sortProperty="GeraDuplicata">
								<Label text="Gera duplicata"/>
								<t:template>
									<CheckBox selected="{GeraDuplicata}" enabled="false"/>
								</t:template>
							</t:Column>
							<t:Column filterProperty="MovimentaEstoque" sortProperty="MovimentaEstoque">
								<Label text="Movimenta estoque"/>
								<t:template>
									<CheckBox selected="{MovimentaEstoque}" enabled="false"/>
								</t:template>
							</t:Column>
						</t:columns>
					</t:Table>
				</content>
				<footer>
					<Toolbar>
						<Button icon="sap-icon://refresh" press="onRefresh"/>
						<ToolbarSpacer/>
						<Button text="Incluir novo" press="onIncluir"/>
						<Button text="Editar" press="onEditar"/>
						<Button text="Remover" press="onRemover"/>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>